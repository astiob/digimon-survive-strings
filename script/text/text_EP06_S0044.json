{
    "scenario_text": [
        {
            "key": "EP06_S0044_0001",
            "value": "おーいみんな、こんなところにいたのか"
        },
        {
            "key": "EP06_S0044_0002",
            "value": "商店街を抜けた先まで行ってみたんだが、\nそこにも朽ち果てた街が見えた"
        },
        {
            "key": "EP06_S0044_0003",
            "value": "敵地とばかりに警戒したのだが、\n元いた島とこちらで、特段変わりはない様子だ"
        },
        {
            "key": "EP06_S0044_0004",
            "value": "そうですか……"
        },
        {
            "key": "EP06_S0044_0005",
            "value": "とはいえ、ざっくりと眺めただけだ\nまだ何か潜んでいる可能性はある"
        },
        {
            "key": "EP06_S0044_0006",
            "value": "休憩が十分なら、新たな発見を求めて\nみんなで街へ移動した方がいいと思うんだが……"
        },
        {
            "key": "EP06_S0044_0007",
            "value": "そうですね\n行ってみる価値はありそうだと思います"
        },
        {
            "key": "EP06_S0044_0008",
            "value": "（さっきファルコモンが行ってしまった方角と一緒だ\n　後を追いかけるなら、ちょうどいい）"
        },
        {
            "key": "EP06_S0044_0009",
            "value": "みんな、探索しながらファルコモンを\n追いかけ……あ"
        },
        {
            "key": "EP06_S0044_0010",
            "value": "…………"
        },
        {
            "key": "EP06_S0044_0011",
            "value": "…………"
        },
        {
            "key": "EP06_S0044_0012",
            "value": "タクマ、まだこの様子だと厳しいと思うぜ"
        },
        {
            "key": "EP06_S0044_0013",
            "value": "（……どうしよう、このままじゃ\n　ファルコモンに追いつけなくなってしまう）"
        },
        {
            "key": "EP06_S0044_0014",
            "value": "おや？　ファルコモンはどうしたのかな？"
        },
        {
            "key": "EP06_S0044_0015",
            "value": "それが……"
        },
        {
            "key": "EP06_S0044_0016",
            "value": "あいつ……どっか行っちまったんだよ"
        },
        {
            "key": "EP06_S0044_0017",
            "value": "……なるほど\n意見がぶつかりあってしまったのかい？"
        },
        {
            "key": "EP06_S0044_0018",
            "value": "別に……\nあいつが勝手にオレたちから離れてっただけだ"
        },
        {
            "key": "EP06_S0044_0019",
            "value": "そうか……これまで大変な道のりだった\n心が疲れ、すれ違ってしまうのも無理はない"
        },
        {
            "key": "EP06_S0044_0020",
            "value": "そうか……辛い目に遭ったんだ\n心が疲れ、すれ違ってしまうのも無理もない"
        },
        {
            "key": "EP06_S0044_0021",
            "value": "（教授……シュウジさんやロップモン、\n　リョウやクネモンの名前は出さないでくれている）"
        },
        {
            "key": "EP06_S0044_0022",
            "value": "（それでも、どうしても意識してしまうけど……）"
        },
        {
            "key": "EP06_S0044_0023",
            "value": "そうだな……心がすれ違っている今だからこそ\n君たちに聞いてほしい話がある"
        },
        {
            "key": "EP06_S0044_0024",
            "value": "聞いてほしい話……？"
        },
        {
            "key": "EP06_S0044_0025",
            "value": "私はずっと考えていた"
        },
        {
            "key": "EP06_S0044_0026",
            "value": "古より伝わる話の中で、厄災を退き\n使役者を守るといわれるケモノガミ伝承と……"
        },
        {
            "key": "EP06_S0044_0027",
            "value": "君たちが今一緒にいる\nこのケモノガミたちとの関係を"
        },
        {
            "key": "EP06_S0044_0028",
            "value": "…………"
        },
        {
            "key": "EP06_S0044_0029",
            "value": "そういえば、教授は敵のことを\nケモノガミって呼んでいましたね"
        },
        {
            "key": "EP06_S0044_0030",
            "value": "ああ、間違いない\nまさに、彼らこそがケモノガミだ"
        },
        {
            "key": "EP06_S0044_0031",
            "value": "神といっても、広く信仰を集める存在ではない\n性質でいえば付喪神に近いとも言えるだろうな"
        },
        {
            "key": "EP06_S0044_0032",
            "value": "想いを受け止めて力を返すところは\nどこか神らしい流れを持っているとは思うが"
        },
        {
            "key": "EP06_S0044_0033",
            "value": "小難しい話はやめてくれって……\nもっとわかりやすく話してくれよ"
        },
        {
            "key": "EP06_S0044_0034",
            "value": "なら、訊きたいことはないか？"
        },
        {
            "key": "EP06_S0044_0035",
            "value": "何かあれば質問してくれ\nその方が君の望む答えを返しやすい"
        },
        {
            "key": "EP06_S0044_0036",
            "value": "し、質問ったって……"
        },
        {
            "key": "EP06_S0044_0037",
            "value": "じゃあ、なんで襲ってくるのと\n襲ってこないのがいるんだ？"
        },
        {
            "key": "EP06_S0044_0038",
            "value": "それは……\n『使役する者の心を反映する』"
        },
        {
            "key": "EP06_S0044_0039",
            "value": "え？"
        },
        {
            "key": "EP06_S0044_0040",
            "value": "古い文献の、神隠しにまつわる記述だ\nケモノガミはすなわち、鏡である"
        },
        {
            "key": "EP06_S0044_0041",
            "value": "パートナーとなった人間の心の在り方次第で\nケモノガミは様々な存在に変化してしまう"
        },
        {
            "key": "EP06_S0044_0042",
            "value": "気高い心の持ち主ならばまっすぐに……\n不安定な心の持ち主ならば禍々しく……"
        },
        {
            "key": "EP06_S0044_0043",
            "value": "君たちのそばにいるケモノガミたちの進化は\nそれぞれの心の表れなのだろう"
        },
        {
            "key": "EP06_S0044_0044",
            "value": "心の……表れ……"
        },
        {
            "key": "EP06_S0044_0045",
            "value": "（じゃあ、アグモンは僕の心を映しているのか）"
        },
        {
            "key": "EP06_S0044_0046",
            "value": "（せっかくだ……僕からも質問してみようかな？）"
        },
        {
            "key": "EP06_S0044_0047",
            "value": "（教授が話してくれた中で、気になる部分がある\n　進化のきっかけとなる心の在り方だ）"
        },
        {
            "key": "EP06_S0044_0048",
            "value": "（それに……僕の心の表れであるアグモンが\n　専門家の教授にはどう見えているのかも気になる）"
        },
        {
            "key": "EP06_S0044_Q1",
            "value": "（教授にどんな質問をしようかな？）"
        },
        {
            "key": "EP06_S0044_Q1_A1",
            "value": "気高い心って？"
        },
        {
            "key": "EP06_S0044_Q1_A2",
            "value": "アグモンはどう見えるのだろう？"
        },
        {
            "key": "EP06_S0044_Q1_A3",
            "value": "不安定な心とは？"
        },
        {
            "key": "EP06_S0044_0050",
            "value": "気高い心ってどんなものなんですか？"
        },
        {
            "key": "EP06_S0044_0051",
            "value": "難しいことを聞く\nこればかりは何とも言えない"
        },
        {
            "key": "EP06_S0044_0052",
            "value": "ただ、他者を思いやり\n正しくあろうとする人間の心は気高い"
        },
        {
            "key": "EP06_S0044_0053",
            "value": "私はそう思っているよ\n根拠の乏しい、ただの経験則だがね"
        },
        {
            "key": "EP06_S0044_0054",
            "value": "タクマはボクに\nたくさん優しくしてくれてるぞ！"
        },
        {
            "key": "EP06_S0044_0055",
            "value": "そ、そうかな？"
        },
        {
            "key": "EP06_S0044_0056",
            "value": "うん！"
        },
        {
            "key": "EP06_S0044_0057",
            "value": "……誰かの心に寄り添ってあげられるなら\n恐らく悪しき進化を遂げることはないだろう"
        },
        {
            "key": "EP06_S0044_0058",
            "value": "心に寄り添う……か"
        },
        {
            "key": "EP06_S0044_0060",
            "value": "アグモンは一度進化したけど……\nこの姿が、僕の心のかたちなのかな"
        },
        {
            "key": "EP06_S0044_0061",
            "value": "教授には、アグモンはどう見えますか？"
        },
        {
            "key": "EP06_S0044_0062",
            "value": "あまり確定的でないことを言うのは主義に反する\nだからはっきりと感じることだけを言うが……"
        },
        {
            "key": "EP06_S0044_0063",
            "value": "現時点ではまだ成長の余地があると感じる"
        },
        {
            "key": "EP06_S0044_0064",
            "value": "成長……"
        },
        {
            "key": "EP06_S0044_0065",
            "value": "恐らく、まだ潜在的な力を秘めている\nそう強く感じるよ"
        },
        {
            "key": "EP06_S0044_0066",
            "value": "あんまりジッと見られると\nちょっとむずむずするなー"
        },
        {
            "key": "EP06_S0044_0067",
            "value": "ごめん、アグモン"
        },
        {
            "key": "EP06_S0044_0068",
            "value": "（未発達か……いつか僕の心が動いたら\n　アグモンの姿もまた変わったりするのかな）"
        },
        {
            "key": "EP06_S0044_0070",
            "value": "あの、不安定な心って……"
        },
        {
            "key": "EP06_S0044_0071",
            "value": "例えば恐怖\n例えば不安、寂しさ、息苦しさ"
        },
        {
            "key": "EP06_S0044_0072",
            "value": "ケモノガミが心の写し鏡であるならば\nそういったマイナスの感情をも写し取るはず"
        },
        {
            "key": "EP06_S0044_0073",
            "value": "そういう意味では、今の君たちは\n非常に危険な状態と言えるだろう"
        },
        {
            "key": "EP06_S0044_0074",
            "value": "…………"
        },
        {
            "key": "EP06_S0044_0075",
            "value": "警告しておく\n無理はしないでもらいたい"
        },
        {
            "key": "EP06_S0044_0076",
            "value": "これは君たちの命を守るためでもあるんだ"
        },
        {
            "key": "EP06_S0044_0077",
            "value": "ケモノガミの使い方を誤れば、その咎は自分自身に\n跳ね返ることになる"
        },
        {
            "key": "EP06_S0044_0078",
            "value": "彼らが守りたいと思う人間\nすなわちパートナーの心の在り方が……"
        },
        {
            "key": "EP06_S0044_0079",
            "value": "ケモノガミ、ケモノガミに結び付いた人間\nその全員の行く末を決めるのだ"
        },
        {
            "key": "EP06_S0044_0080",
            "value": "（僕の心の在り方が\n　僕とアグモンの未来を決める？）"
        },
        {
            "key": "EP06_S0044_0081",
            "value": "なあ……なんでオレたちはケモノガミと\n結び付いたんだ？"
        },
        {
            "key": "EP06_S0044_0082",
            "value": "すまない、その質問に関しては\n確かな答えを持っていない"
        },
        {
            "key": "EP06_S0044_0083",
            "value": "そっか……"
        },
        {
            "key": "EP06_S0044_0084",
            "value": "でも、ケモノガミの祠に僕たちがそろったのにも\nきっとなにか意味があったんですよね？"
        },
        {
            "key": "EP06_S0044_0085",
            "value": "ああ、おそらくな"
        },
        {
            "key": "EP06_S0044_0086",
            "value": "しかし、それだけでは\n説明できないこともある……"
        },
        {
            "key": "EP06_S0044_0087",
            "value": "…………"
        },
        {
            "key": "EP06_S0044_0088",
            "value": "…………"
        },
        {
            "key": "EP06_S0044_0200",
            "value": "（教授が、ミユキとハルをジッと見てる？\n　何かあるんだろうか……）"
        },
        {
            "key": "EP06_S0044_0089",
            "value": "よかった……祠にみんなが集まったの\nウチのせいじゃなかったんだ"
        },
        {
            "key": "EP06_S0044_0090",
            "value": "うん、ミウちゃんのせいじゃないよ"
        },
        {
            "key": "EP06_S0044_0091",
            "value": "そうよ！"
        },
        {
            "key": "EP06_S0044_0092",
            "value": "会えてうれしい……？"
        },
        {
            "key": "EP06_S0044_0093",
            "value": "ウチも、シャコモンと\n仲良くなれてうれしいよ！"
        },
        {
            "key": "EP06_S0044_0094",
            "value": "…………"
        },
        {
            "key": "EP06_S0044_0095",
            "value": "不安定な心がケモノを変える\nじゃあオレがファルコモンにしたことは……"
        },
        {
            "key": "EP06_S0044_0096",
            "value": "ミノル……大丈夫？"
        },
        {
            "key": "EP06_S0044_0097",
            "value": "なあ、タクマ\nオレ……"
        },
        {
            "key": "EP06_S0044_0098",
            "value": "ファルコモンを捜しに行きたい？"
        },
        {
            "key": "EP06_S0044_0099",
            "value": "うん……オレ、酷いこと言っちまった"
        },
        {
            "key": "EP06_S0044_0100",
            "value": "教授の言うことを信じるなら、ケモノが人を\n襲うのは、そばにいる人の心が原因……"
        },
        {
            "key": "EP06_S0044_0101",
            "value": "つまりオレが今感じてる、怖がって疑う気持ちや言葉が\nあいつに悪い影響を与えちまうんだろ？"
        },
        {
            "key": "EP06_S0044_0102",
            "value": "だったら……あいつが悪い進化をしたら、それは\nオレの心のせいってことだ"
        },
        {
            "key": "EP06_S0044_0103",
            "value": "あいつは悪くなかったんだ\nなのにあいつは酷い言葉を我慢してくれた"
        },
        {
            "key": "EP06_S0044_0104",
            "value": "怖がってばっかりなオレを、あいつ\nずっと助けてくれてたんだ……"
        },
        {
            "key": "EP06_S0044_0105",
            "value": "だから……オレさ\n合わせる顔なんてないけど……"
        },
        {
            "key": "EP06_S0044_0106",
            "value": "もしオレが不安な気持ちでいたせいで、あいつを\n悪い方向に進化させたらって思ったら……"
        },
        {
            "key": "EP06_S0044_0107",
            "value": "……それは、ダメな気がするんだ"
        },
        {
            "key": "EP06_S0044_0108",
            "value": "そっか……きっとまだ間に合うよ\nファルコモンと仲直りしよう"
        },
        {
            "key": "EP06_S0044_0109",
            "value": "ファルコモン、きっと喜ぶぞ！\nボクも手伝う！"
        },
        {
            "key": "EP06_S0044_0110",
            "value": "ウチもウチも！\nみんなで<color=#B41919>ファルコモン</color>を捜そう！"
        },
        {
            "key": "EP06_S0044_0111",
            "value": "あ、ありがとう、みんな……"
        },
        {
            "key": "EP06_S0044_0112",
            "value": "……待っててくれよ、ファルコモン"
        }
    ]
}